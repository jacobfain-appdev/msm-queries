<h1> Actor #<%=@actor_id%> details </h1>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://robohash.org/<%= @the_actor.image%>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_actor.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_actor.updated_at%>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>


<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>
<% @characters.each do |a_character|%>
  <tr>
      <td>
        <%m = a_character.movie_id%>
        <%n = Movie.where({:id=>m}).at(0)%>
        <%= n.title%>
      </td>

      <td>
        <%= n.year%>
      </td>

      <td>
        <%m = a_character.movie_id%>
        <%n = Movie.where({:id=>m}).at(0)%>
        <%d = Director.where({:id=>n.director_id}).at(0)%>
        <%= d.name%>
      </td>

      <td>
        <%=a_character.name%>
      </td>

      <td>
        <a href="/movies/1">
          Show details
        </a>
      </td>
  </tr>
  <%end%>
</table>
